@model IEnumerable<SMS.Web.Areas.Administrator.Models.ReportViewModel>

<h2>Reports</h2>

<p>
    @Html.ActionLink("Create New Report", "Create", null, new { @class = "btn btn-lg btn-success" })
</p>
<table class="table table-responsive table-hover">
    <tr>
        <th>
            Report No.
        </th>
        <th>
            Start Time
        </th>
        <th>
            End Time
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.Id
        </td>
        <td>
            @item.StartTime
        </td>
        <td>
            @item.EndTime
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
